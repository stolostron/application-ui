---
apiVersion: apps.open-cluster-management.io/v1
kind: PlacementRule
metadata:
  labels:
    app: {{{name}}}
  name: {{{name}}}-placement
  namespace: {{{namespace}}}
spec:
  clusterReplicas: 3
  clusterSelector:
    matchLabels:
      environment: Dev
  {{#if online-cluster-only-checkbox}}
  clusterConditions:
    - type: ManagedClusterConditionAvailable
      status: "True"
  {{/if}}

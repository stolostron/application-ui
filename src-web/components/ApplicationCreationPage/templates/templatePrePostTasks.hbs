{{#if ansibleSecretName}}
---
apiVersion: v1
kind: Secret
metadata:
  labels:
    app: {{{@root.name}}}
  name: {{{ansibleSecretName}}}
  namespace: {{{@root.namespace}}}
data: 
{{#if @root.showSecrets}}
  host: {{{@root.host}}}
  token: {{{@root.token}}}
{{else}}
  host: # injected on create
  token: # injected on create
{{/if}}
{{/if}} 
